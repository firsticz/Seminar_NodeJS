<h3><a class="btn btn-secondary" href="/student"><i class="fa fa-plus"> Create New</i></a> Student List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>historyid</th>
            <th>term</th>
            <th>year</th>
            <th>grade</th>
            <th>studentid</th>
            <th>courseid</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        {{#each list}}
        <tr>
            <td>{{this.historyid}}</td>
            <td>{{this.term}}</td>
            <td>{{this.year}}</td>
            <td>{{this.grade}}</td>
            <td>{{this.studentid}}</td>
            <td>{{this.courseid}}</td>
            <td>
                <a href="/student/{{this._id}}"><i class="fa fa-edit fa-lg" aria-hidden="true"></i></a>
                <a href="/student/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>